<% if user_signed_in? %>
  <p class="navbar-text navbar-right">
    Signed in as <%= current_user.with_role %> | <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
  </p>
<% else %>
  <%= form_for(:user, url: session_path(:user), html: { class: 'navbar-form navbar-right' }) do |f| %>
    <div class="form-group">
      <%= f.text_field :email, class:'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class:'form-control', placeholder: 'Password' %>
    </div>
    <%= f.submit 'Sign in', class: 'btn btn-default' %>
  <% end %>
<% end %>