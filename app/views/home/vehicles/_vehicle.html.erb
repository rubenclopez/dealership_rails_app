<div class="row">
  <% groups.each_with_index do |vehicle, idx| %>
    <% next if vehicle.nil? %>
    <%= link_to vehicle_path(vehicle) do %>
      <section class="col-md-4">
        <div class="card-item">
          <div class="image-container">
            <%= image_tag "car-#{ idx + 1 }.jpg" %>
          </div>
          <div class="col-md-12">
            <h3><%= vehicle.heading %></h3>
          </div>
          <div class="card-body col-md-12">
            <h6><%= vehicle.description %></h6>
          </div>
          <div class="row col-md-12">
            <div class="col-md-4">
              Make
            </div>
            <div class="col-md-4">
              Model
            </div>
            <div class="col-md-4">
              Year
            </div>
          </div>
          <div class="row col-md-12 col-md-offset-0">
            <div class="col-md-4">
              <h5><%= vehicle.make %></h5>
            </div>
            <div class="col-md-4">
              <h5><%= vehicle.model %></h5>
            </div>
            <div class="col-md-4">
              <h5><%= vehicle.year %></h5>
            </div>
          </div>
          <div class="row col-md-12 spacer">
          </div>
          <div class="row col-md-12">
            <div class="col-md-12">
              Location
            </div>
          </div>
          <div class="row col-md-12 col-md-offset-0">
            <div class="col-md-5">
              <h5><%= format_location(vehicle.location) %></h5>
            </div>
        <% end %>
            <div class="col-md-7 button-tags">
              <%= available_sold_state(vehicle) %>
            </div>
          </div>
        </div>
        <div class="spacer2">
        </div>
      </section>
  <% end %>
</div>